    <div class="navbar">
        <div class="navbar-inner">
                <ul class="nav pull-right">
                    
                </ul>
                <a class="brand" href="@Url.Action("Index", "Home")" target="_blank"><span class="first">网站</span> <span class="second">后台管理</span></a>
        </div>
    </div>
    
    <div class="row-fluid">
        <div class="dialog">
            @Html.ShowNotice()
            <div class="block">
                <p class="block-heading">登录</p>
                <div class="block-body">
                    <form method="POST">
                        @Html.LabelFor(t=>t.Username)
                        @Html.TextBoxFor(t=>t.Username,new {@class="span12"})
                        @Html.LabelFor(t=>t.Password)
                        @Html.PasswordFor(t=>t.Password,new {@class="span12"})
                        <div>
                            <div class="span6">
                                <label class="remember-me pull-left">@Html.CheckBoxFor(t=>t.IsRememberMe) 记住我一周</label>
                            </div>
                            <button type="submit" class="btn btn-primary pull-right">登 录</button>
                        </div>
                        <div class="clearfix"></div>
                    </form>
                </div>
            </div>
            @*<p class="pull-right" style=""><a href="http://www.portnine.com" target="blank">Theme by Portnine</a></p>*@
        </div>
    </div>
      
      @Scripts.Render("~/scripts/jquery")
      @Scripts.Render("~/scripts/bootstrap")
</body>
</html>